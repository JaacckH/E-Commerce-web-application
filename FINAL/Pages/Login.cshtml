<div class="row page-1">
    <div id="main-header-panel-create-account" class="order-2 order-xl-1 col-12 col-md-9 col-xl-6 verticle-align-left">
        <div class="row">
            <div class="col-8">
                <h1>LOGIN</h1>
                <form>
                    <div class="form-group">
                        <input type="email" placeholder="EMAIL" class="form-control" id="email-reset-input" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group">

                        <input type="password" placeholder="PASSWORD" class="form-control" id="password-input">
                        <small id="passwordHelp" onclick="ToggleForgotten()" class="form-text text-muted forgotten">FORGOTTEN PASSWORD?</small>
                    </div>
                    <div id="action-buttons" class="row col-12">
                        <button type="submit" class="btn btn-ouioui">Login</button>
                        <button id="create-btn" class="btn btn-ouioui-secondary margin-left-5px">SIGN UP</button>
                    </div>
                </form>
            </div>
            <div class="col-12">
                <p style="margin: -1px;">LOGIN WITH:</p>
            </div>
            <div class="col-12">
                <div class="row col-12">
                    <button id="social-btn" class="col">
                        <i class="fab fa-google"></i>
                        <span style="padding: 0 20px 0 20px">GOOGLE</span>
                    </button>
                    <button id="social-btn" class="col">
                        <i class="fab fa-facebook-square"></i>
                        <span style="padding: 0 20px 0 20px">FACEBOOK</span>
                    </button>
                </div>
            </div>
        </div>

    </div>


    <div id="main-header-panel-create-account-reset-password" class="order-2 order-xl-1 col-12 col-md-9 col-xl-6 verticle-align-left d-none">
        <div class="row">
            <div class="col-8">
                <h1>RESET PASSWORD</h1>

                <form>
                    <div class="form-group">
                        <input type="email" placeholder="EMAIL ADDRESS" class="form-control" id="email-input" aria-describedby="emailHelp">
                    </div>
                    <div class="col-12">
                        <div id="action-buttons" class="row">
                            <button type="submit" class="btn btn-ouioui">Reset</button>
                            <button id="action-buttons" class="btn btn-ouioui-secondary margin-left-5px" onclick="ToggleForgotten()">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <div class="col-12 col-xl-6 order-1 order-xl-2" style="overflow: hidden;">
        <img src="https://raw.githubusercontent.com/nateainsworth/Group-24/master/Group-24/wwwroot/images/Header-Img.png" alt="" class="d-none d-xl-block header-img">
        <img src="https://github.com/nateainsworth/Group-24/blob/master/Group-24/wwwroot/images/header-mobile.png?raw=true" class="d-block d-xl-none header-img mobile-header-img" alt="">

    </div>
</div>
</div>

<div class="page-footer">
    <div class="row page-footer-container">
        <div class="col-12 col-md-6 col-xl-3 order-4 order-xl-1">
            <p>
                <a>Terms & Conditions</a><br />
                <a>Returns Policy</a><br />
                <a>Privacy Policy</a><br />
                <a>Delivery Information</a>
            </p>

            <p>Phone: +230 5988 0400</p>
        </div>
        <div class="col-12 col-md-6 col-xl-3 order-3 order-xl-2">
            <p>
                Address:<br />
                Harbour Front Building,<br />
                President John Kennedy St,<br />
                Port Louis,<br />
                Mauritius
            </p>
        </div>
        <div class="col-12 col-md-6=12 col-xl-3 row order-2 order-xl-3">
            <div class="col-12"><p>Opening Hours:</p></div>
            <div class="col-6"><p>Mon - Fri<br />Saturday<br />Sunday</p></div>
            <div class="col-6 px-4"><p>10am - 5pm<br />10am - 5pm<br />10am - 1pm</p></div>
        </div>
        <div class="col-12 col-md-8 px-4 col-xl-3 row subscribe-row order-1 order-xl-4">
            <h3>BE UP TO DATE WITH OUR NEWS!</h3>
            <form class="form-group">
                <input type="email" class="form-control mb-3" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="EMAIL">
                <button class="btn btn-ouioui-secondary">SUBSCRIBE</button>
            </form>
        </div>
    </div>
</div>

