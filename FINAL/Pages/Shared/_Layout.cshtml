                   //var newOrders = (@Classes.Orders.getNumOfOrdersForDay(day) / @Classes.Orders.getNumOfOrdersForDay(day - 1)) * 100;
                    //console.log(-100 + Math.round((@Classes.Orders.getNumOfOrdersForDay(day) / @Classes.Orders.getNumOfOrdersForDay(day - 1)) * 100));

